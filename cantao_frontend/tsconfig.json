{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", //BUNDLER ANTERIORMENTE
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react", //PRESERVE ANTERIORMENTE -- REACT-JSX
    "incremental": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/**/*", "**/*.test.tsx", "**/*.test.ts"],
  "exclude": ["node_modules"]
}